<div class="search_form m-1">
  <p class= "my-3">フリーワードで検索：</p>
  <%= form_with url: public_search_path, local: true, method: :get do |f| %>
    <div class="d-flex align-items-center">
      <div class = "m-1"><%= f.text_field :word, placeholder: "目的・観光地など", class: "form-control" %></div>
      <div><%= f.submit "検索", class: "btn btn-md btn-info d-flex align-items-center" %></div>
    </div>
    <div class = "m-1"><%= f.select :range, options_for_select([["投稿検索", 'Post'], ["ユーザー検索", 'User']]) %></div>
    <div class = "m-1"><%= f.select :search, options_for_select([["部分一致","partial_match"], ["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"]]) %></div>
  <% end %>
</div>