<h2>検索結果 "<%= @word %>"</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, public_user_path(user)  %></td>
        </tr>
      <% end %>
    </tbody>
  <!--検索対象モデルがPostの時-->
  <% elsif @range == 'Post' || @range == 'Tag' %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, public_post_path(post) %></td>
          <td>
            <% post.tags.each do |tag| %>
              <li style="list-style: none;"><%= link_to tag.name, public_search_path(word: tag.name, range:"Tag", search: "perfect_match") %></li>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>