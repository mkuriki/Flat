<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <div class="page-top container">
        <h1 class = "page-title text-center p-5">Make Your Day !!</h1>
        <p class = "text-center mb-5">ふらっときままに　<i class="fas fa-cloud"></i></p>
        <!--検索フォーム-->
        <div class="search_form m-1">
            <%= form_with url: public_search_path, local: true, method: :get do |f| %>
            <div class="d-flex align-items-center justify-content-center">
              <div class = "m-1 col-10"><%= f.text_field :word, placeholder: "目的・観光地など", class: "form-control" %></div>
              <div><%= f.submit "検索", class: "btn btn-md btn-info d-flex align-items-center" %></div>
            </div>
            <%= f.hidden_field :range, :value => "Post" %>
            <%= f.hidden_field :search, :value => "partial_match" %>
            <% end %>
        </div>
  
        <!--ボタン＿投稿一覧ページへ遷移-->
        <div class= "text-center p-5">
          <%= link_to public_posts_path, class: "btn btn-outline-info btn-lg" do %>
          <i class="fas fa-search"></i> 投稿をチェック
          <% end %>
        </div>
      </div>

       <!--ボタン＿ゲストログインページへ遷移-->
      <div class="row">
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
      </div>

      <!--新着投稿一覧-->
      <h2 class= "text-center m-3">新着投稿</h2>
      <div class = "row  justify-content-center">
        <div class="col-lg-7 col-md-12">
          <%= render "public/posts/index_card", posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>



