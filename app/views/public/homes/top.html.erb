<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <h1 class = "text-center m-5">Make Your Day !!</h1>
      <p class = "text-center">ふらっときままに　<i class="fas fa-cloud"></i></p>
      <!--検索フォーム-->
      <div class="search_form">
        <%= form_with url: public_search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word, placeholder: "Search", class: "form-control" %>
          <%= f.select :range, options_for_select([["投稿検索", 'Post'], ["ユーザー検索", 'User']]) %>
          <%= f.select :search, options_for_select([["部分一致","partial_match"], ["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"]]) %>
          <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>
      
      <!--ボタン＿投稿一覧ページへ遷移-->
      <div class= "text-center m-3">
        <%= link_to public_posts_path, class: "btn btn-outline-info btn-lg" do %>
        <i class="fas fa-search"></i> 投稿をチェック
        <% end %>
      </div>
      
       <!--ボタン＿ゲストログインページへ遷移-->
      <div class="row">
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
      </div>     
      
      <!--新着投稿一覧-->
      <h2 class= "text-center m-3">新着投稿</h2>
      <%= render "public/posts/index", posts: @posts %>
  </div>
</div>



