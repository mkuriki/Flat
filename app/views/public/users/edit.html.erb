    <p id = notice></p>
    <div class = container>
        <div class = row>
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                
                <h3>マイページ編集</h3>
                <%= form_with model: @user,url: public_user_path do |f| %>
                    <% if @user.errors.any? %>
                        <%= @user.errors.count %>errors prohibited this obj from being saved: 
                        <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                        </ul>
                    <% end %> 
                    <label for="user_image">プロフィール画像</label>
                    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user_image" %> 
                    <div class="form-group">
                        <label for="user_name">名前</label>
                        <%= f.text_field :name, autofocus: true, placeholder: @user.name, class: "form-control name" %>
                    </div>
                    <div class="form-group">   
                        <label for="user_introduction">紹介文</label>
                        <%= f.text_area :introduction, autofocus: true, class: "form-control introduction" %>
                    </div>    
                    <!--退会-->
                    <%= link_to "退会する", public_path(current_user) %>                    
                     <div class="form-group text-center m-3">
                       <%= f.submit "更新する", class: "btn btn-success" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
