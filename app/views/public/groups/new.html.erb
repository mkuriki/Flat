<div container>
    <div = row>
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <% if @group.errors.any? %>
             <%= @group.errors.count %>errors prohibited this obj from being saved: 
             <ul>
             <% @group.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
             </ul>
        <% end %>         
        
        <h2 class="mt-3">新規グループ</h2>
        <%= form_with model:[@group], url: public_post_groups_path(@post, @group), local: true do |f| %>
          <div class = form-group>
              <label for="group_name">グループ名</label>
              <%= f.text_field :name, class: "form-control group_name" %>
          </div>
          <div class = form-group>
              <label for="group_introduction">グループ紹介文</label>
              <%= f.text_area :introduction, class: "form-control group_introduction" %>
          </div>
          <div class="form-group">
              <label for="group_image">グループ画像</label>
              <%= f.file_field :group_image, placeholder: "グループ画像", accept: "image/*", class: "form-control-file group_image" %> 
          </div>
          <div class = form-group>
              <%= f.submit 'グループ作成', class: "btn btn-sm btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
</div>