<body>
    <main>
        <p id = notice></p>
        <div class = container>
            <div class = row>
                <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                    <h1>グループを編集</h1>
                    <%= form_with model:[:public, @group] do |f| %>
                      <div class="form-group">
                          <label for="group_name">グループ名</label>
                          <%= f.text_field :name, autofocus: true, placeholder: @group.name, class: "form-control group_title" %>
                      </div>
                      <div class = "form-group">
                          <label for="group_introduction">説明文</label>
                          <%= f.text_area :introduction, autofocus: true, class: "form-control group_introduction" %>
                      </div>
                      <div class = "form-group">
                      <label for="group_image">グループ画像</label>
                        <%= f.file_field :group_image, placeholder: "グループ画像", accept: "image/*", class: "form-control-file group_image" %>
                    </div>
                      <div class = "form-group">
                          <%= f.submit "Update Group", class: "btn btn-success"  %>
                      </div>
                      <%= link_to "投稿詳細ページへ戻る", public_post_path(@post) %>
                    <% end %>
                </div>
            </div>
        </div>
    </main>
</body>