<div class="container">
  <h4>タグが<%=@tag.name%>の投稿一覧</h4>

  <!--タグリスト-->
  <%= render 'public/posts/taglist', tag_list: @tag_list %>
  <!--タグにもとずいた投稿一覧-->
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-body">
        <h6 class="card-title">
          <%=link_to public_post_path(post.id) do %>
           <%= post.title.truncate(20) %>
          <% end %>
        </h6>
      </div>
    </div>
  <% end %>
</div>