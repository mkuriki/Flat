<div class="container">
  <h4>タグが<%=@tag.name%>の投稿一覧</h4>
  
  <!--タグリスト-->
  <% @tag_list.each do |list|%>
    <%=link_to list.name, public_search_tag_path(tag_id: list.id) %>
    <%="(#{list.posts.count})" %>
  <% end %>
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-body">
        <h6 class="card-title">
          <%=link_to public_post_path(post.id) do %>
           <%= post.title.truncate(20) %>
          <% end %>
        </h6>
      </div>
    </div>
  <% end %>
</div>