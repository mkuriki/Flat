<div class="container">
  <div class = "row">
    <div class = "col-md-3">
      <%= form_with model:[:public, @post], local: true do |f| %>
        <h4>投稿する</h4>
        <%= f.file_field :post_image, accept: "image/*" %>
        <div class = form-group>
          <label for="post_title">タイトル</label>
          <%= f.text_field :title, class: "form-control post_title" %>
        </div>
        <div class = form-group>
          <label for="post_body">詳細</label>
          <%= f.text_area :body, class: "form-control post_body" %>
        </div>
        <div class = form-group>
          <%= f.submit '投稿する', class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>

    <div class = "col-md-9">
      <h2>投稿一覧</h2>
      <% @posts.each do |post| %>
        <div>
          <%= link_to public_post_path(post.id) do %>
            <%= image_tag post.get_post_image(200,200) %>
          <% end %>
          <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
          <p>タイトル：<%= link_to post.title, public_post_path(post)  %></p>
          <p id="fav_<%= post.id %>"><%= render "public/favorites/fav", post: post %></p>
          <p>説明：<%= post.body %></p>
          <p>ユーザーネーム：<%= post.user.name %></p>
        </div>
      <% end %>
    </div>
</div>
