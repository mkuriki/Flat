<div class="container">
  <div class="mb-auto">
    <div class = "mt-3">
      <!--検索フォーム-->
        <%= render 'public/searches/form' %>
      <!--タグリスト-->
        <% @tag_list.each do |list|%>
        <%=link_to list.name, public_search_tag_path(tag_id: list.id) %>
        <%="(#{list.posts.count})" %>
        <% end %>
    </div>
    <!--新規投稿-->
    <div class = "text-center mt-5">
      <%= link_to new_public_post_path, class: "btn btn-outline-info btn-lg btn-block" do %>
        <i class="fas fa-flag"></i> 投稿する
      <% end %>
    </div>
    <!--投稿一覧-->
      <%= render "public/posts/index", posts: @posts %>
      <div class = "text-center m-3"<%= paginate @posts %></div>
  </div>
</div>
