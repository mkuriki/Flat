<div class = "container">
  <div clss = "row">
    <%= image_tag @post.get_post_image(200,200) %>
    <p>タイトル：<%= @post.title %></p>
    <p>説明：<%= @post.body %></p>
    <p>投稿ユーザー画像：<%= image_tag @post.user.get_profile_image(100,100) %></p>
    <p>ユーザーネーム：<%= @post.user.name %></p>
    <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
    <% if @post.user == current_user %>
      <%= link_to "編集", edit_public_post_path(@post), class: "btn btn-sm btn-success edit_post" %>
      <%= link_to "削除", public_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_post" %>
    <% end %>
  </div>
</div>

