<div class= container px-5 px-sm-0>
    <h4 class = "text-center m-3">会員一覧</h4>
    <div class = row>
      <div  class="col-md-8 offset-md-1">
      <table  class="table table-hover">
        <thead>
            <tr>
                <th>プロフィール画像</th>
                <th>氏名</th>
                <th colspan="1"></th>
            </tr>
        </thead>
        <tbody>
           <% @users.each do |user| %>
               <tr>
                 <td><%= image_tag user.get_profile_image(100,100) %></td>
                 <td><%= user.name %></td>
                 <td><%= link_to 'Show',admin_user_path(user) %></td>
               </tr>
           <% end %>
        </tbody>
      </table>
    </div>
    <div>class = "text-center m-3"<%= paginate @posts %></div>
  </div>
</div>
